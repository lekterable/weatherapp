doctype html
html
  head
    title Pogodynka
    link(rel='stylesheet' href='https://bootswatch.com/journal/bootstrap.min.css')
  body
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Pogodynka
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            if user
              li
                a(href='/users/profile') Witaj, #{user.name}
              li 
                a(href='/users/logout') Wyloguj
            else
              li
                a(href='/users/register') Rejestracja
              li
                a(href='/users/login') Zaloguj
    .container
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      br
      hr
      footer
        p.text-center Copyright &copy; 2017
