extends layout
block content
  div.page-header 
    h1 Witaj na swoim profilu
  div.row
    div.col-sm-6.col-sm-offset-3
      div.panel.panel-default
        div.panel-heading
          h1.panel-title Twoje dane:
        div.panel-body
          form(method='POST', action='/users/profile')
            strong Login:
            i  #{user.username}
            hr
            #form-group
              label Imię:
              input.form-control(type='text', value = user.name, name='name')
            hr
            #form-group
              label Miasto:
              if user.city
                input.form-control(type='text', value = user.city, name='city')
              else
                input.form-control(type='text', value = 'Uzupełnij swoje miasto', name='city' onfocus='clearValue(this)')
              hr
            input.btn.btn-primary(type='submit', value='Edytuj')
